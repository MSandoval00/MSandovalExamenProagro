@model ML.Usuario
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container text-center">
         <h2>Usuario Registrados</h2>
        <a href="@Url.Action("Cargar","CargaMasiva")" class="btn btn-primary">EXCEL</a>
        <a href="@Url.Action("Form","Usuario")" class="btn btn-success">Agregar nuevo usuario</a>
</div>
<hr />
@if (Model.Usuarios.Count>0)
{
    <div class="container">
        <div class="row">
            <table class="table table-hover table-condesed">
                <thead>
                    <tr>
                        <th class="text-center">Actualizar</th>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Fecha de Nacimiento</th>
                        <th class="text-center">RFC</th>
                        <th class="text-center">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(ML.Usuario usuario in Model.Usuarios)
                    {
                     <tr class="text-center">
                        <td><a class="btn btn-warning" href="@Url.Action("Form","Usuario",new {IdUsuario=usuario.IdUsuario})">Actualizar</a></td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.FechaNacimiento</td>
                        <td>@usuario.RFC</td>
                        <td><a class="btn btn-danger" href="@Url.Action("Delete","Usuario",new {IdUsuario=usuario.IdUsuario})">Eliminar</a></td>
                    </tr>   
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
<div class="alert alert-warning" role="alert">
 No hay registros de usuarios
</div>
}
