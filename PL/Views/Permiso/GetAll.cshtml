@model ML.Permiso
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container text-center">
         <h2>Permisos Registrados</h2>
        <a href="@Url.Action("Form","Permiso")" class="btn btn-success">Agregar nuevo permiso</a>
</div>
<hr />
@if (Model.Permisos.Count>0)
{
<div class="container">
    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>Actualizar</th>
                    <th>Usuario</th>
                    <th>Permiso</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Permiso permiso in Model.Permisos)
                {
                <tr>
                    <td><a href="@Url.Action("Form","Permiso",new{IdUsuario=permiso.Usuario.IdUsuario})">Actualizar</a></td>
                    <td>@permiso.Usuario.Nombre</td>
                    <td>@permiso.Estado.NombreEstado</td>
                    <td><a href="@Url.Action("Delete","Permiso",new{IdUsuario=permiso.Usuario.IdUsuario})">Eliminar</td>
                </tr>    
                }
            </tbody>
        </table>
    </div>
</div>
}
else
{
    <div class="alert alert-warning" role="alert">
 No hay registros de permisos
</div>
}
