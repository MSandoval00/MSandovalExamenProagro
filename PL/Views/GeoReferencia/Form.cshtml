@model ML.GeoReferencias
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
        <h2>Formulario para registra GeoReferencias</h2>
</div>
<div class="container">
    @using (Html.BeginForm("Form","GeoReferencia",FormMethod.Post,new{ enctype="multipart/form-data"}))
    {
    <div class="row">
        @Html.HiddenFor(model=>Model.IdGeorreferencia)
        <div class="col-md-3">
            @Html.LabelFor(model=> Model.Estado.IdEstado)
            @Html.DropDownListFor(model=> Model.Estado.IdEstado,new SelectList(Model.Estado.Estados,"IdEstado","NombreEstado"),"Selecciona el estado",new {@class="form-control btn btn-primary dropdown-toggle"})
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model=> Model.Latitud)
           @Html.TextBoxFor(model=> Model.Latitud,new{@class="form-control"})
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model=> Model.Longitud)
           @Html.TextBoxFor(model=> Model.Longitud,new{@class="form-control"})
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <input type="submit" class="btn btn-success" value="Guardar Georreferencia"/>
            <a href="@Url.Action("GetAll","GeoReferencia")" class="btn btn-danger">Cancelar</a>
        </div>
    </div>    
    }
</div>